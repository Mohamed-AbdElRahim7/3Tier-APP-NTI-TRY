pipeline {
  agent any

  stages {
    stage('Clone Repo') {
      steps {
        git branch: 'main', url: 'https://github.com/Mohamed-AbdElRahim7/3Tier-APP-NTI-TRY.git'
        echo '‚úÖ Finished cloning repository.'
      }
    }

    stage('Prepare SSH Key') {
      steps {
        withCredentials([sshUserPrivateKey(
          credentialsId: 'ec2-ssh-key',
          keyFileVariable: 'SSH_KEY'
        )]) {
          sh '''
            mkdir -p ~/.ssh
            cp $SSH_KEY ~/.ssh/jenkins
            chmod 600 ~/.ssh/jenkins

            # Configure SSH to skip host key checking and use the correct key
            cat <<EOF > ~/.ssh/config
Host *
  StrictHostKeyChecking no
  IdentityFile ~/.ssh/jenkins
EOF
            chmod 600 ~/.ssh/config
          '''
          echo '‚úÖ SSH Key prepared and SSH config set.'
        }
      }
    }

    stage('Debug SSH Key') {
      steps {
        sh '''
          echo "üìÇ Listing ~/.ssh directory:"
          ls -la ~/.ssh

          echo "üîê Checking if ~/.ssh/jenkins exists:"
          [ -f ~/.ssh/jenkins ] && echo '‚úÖ SSH key file found.' || echo '‚ùå SSH key file NOT found.'
        '''
      }
    }

    stage('Run Ansible Playbook') {
      steps {
        dir('ansible') {
          sh '''
            export ANSIBLE_HOST_KEY_CHECKING=False
            ansible-playbook -i inventory playbooks/setup.yml
          '''
        }
        echo '‚úÖ Ansible Playbook executed.'
      }
    }
  }
}
